<Window x:Class="ZooScenario.CageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooScenario"
        mc:Ignorable="d"
        Title="CageWindow" Height="300" Width="300" Loaded="window_Loaded" Closed="Window_Closed">
    <Grid x:Name="mainGrid">
        <Viewbox Stretch="Uniform" Margin="10">
            <Border x:Name="cageBorder" BorderBrush="Black" BorderThickness="2" Height="400" Width="800">
                <Grid x:Name="cageGrid"/>
            </Border>
        </Viewbox>
    </Grid>
</Window>
